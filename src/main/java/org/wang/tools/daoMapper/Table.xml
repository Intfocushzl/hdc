<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.wang.tools.dao.toolMapper" >
  <resultMap id="BaseResultMap" type="org.wang.tools.vo.Tables">
    <result column="COLUMN_NAME" property="field" jdbcType="VARCHAR" />
    <result column="DATA_TYPE" property="type" jdbcType="VARCHAR" />
    <result column="COLUMN_COMMENT" property="comment" jdbcType="VARCHAR" />
   </resultMap>
 
   <select id="getTableInfo" parameterType="java.lang.String" resultMap="BaseResultMap" >
      
		select COLUMN_NAME , DATA_TYPE , COLUMN_COMMENT 
        from information_schema.columns 
        where table_name=#{tableName , jdbcType=VARCHAR}
   </select>
 
 </mapper>